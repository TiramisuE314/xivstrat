---
import DutyStratLayout from '@/layouts/DutyStratLayout.astro'

import EventSection from '@/components/section/EventSection.astro'
import RoleIcon from '@/components/RoleIcon.astro'
import SeparatorSection from '@/components/section/SeparatorSection.astro'
import DraftWarning from '@/components/draft-warning/DraftWarning.astro'

import BruteAbombinator from './_components/BruteAbombinator.astro'
import BrutalImpactCast from './_components/BrutalImpactCast.astro'
import AttackSection from './_components/BruteAbombinatorAttackSection.astro'

import BrutalImpact from './_mechanics/BrutalImpact.astro'
import Stoneringer from './_mechanics/Stoneringer.astro'
import SinisterSeeds from './_mechanics/SinisterSeeds.astro'
import Explosion from './_mechanics/Explosion.astro'
import PulpSmash from './_mechanics/PulpSmash.astro'
import NeoBombarianSpecial from './_mechanics/NeoBombarianSpecial.astro'

import { translations } from './_translations'

const dutyId = '07/m7s'

const base = 0
const brutalImpact = translations.brutalImpact
const sinisterSeeds = translations.sinisterSeeds
const explosion = translations.explosion
const pulpSmash = translations.pulpSmash
const neoBombarianSpecial = translations.neoBombarianSpecial
---

<DutyStratLayout dutyId={dutyId} base={base}>
  <SeparatorSection />
  <DraftWarning />
  <SeparatorSection />
  <EventSection>
    <RoleIcon role="tank" tag="MT" />
    开怪，将
    <BruteAbombinator />
    固定在场中偏南一点的位置
  </EventSection>
  <AttackSection time="00:03.832" damage="57000" damageType="physical" />
  <SeparatorSection id="brutal-impact" title={brutalImpact} />
  <BrutalImpactCast
    start="00:05.165"
    activateTimes={['00:10.381', '00:11.451', '00:12.521', '00:13.589', '00:14.657', '00:15.727']}
  />
  <BrutalImpact />
  <AttackSection time="00:18.577" damage="57000" damageType="physical" />

  <SeparatorSection
    id="stoneringer-smash-here-there"
    title={`${translations.stoneringer} + ${translations.smashHereThere}`}
  />
  <Stoneringer />
  <AttackSection time="00:35.910" damage="57000" damageType="physical" />
  <AttackSection time="00:39.740" damage="57000" damageType="physical" />

  <SeparatorSection id="sinister-seeds" title={sinisterSeeds} />
  <SinisterSeeds />

  <SeparatorSection id="explosion" title={explosion} />

  <Explosion />

  <AttackSection time="02:02.160" damage="57000" damageType="physical" />

  <SeparatorSection id="pulp-smash" title={pulpSmash} />
  <PulpSmash />
  <AttackSection time="02:11.071" damage="57000" damageType="physical" />
  <AttackSection time="02:14.104" damage="57000" damageType="physical" />
  <AttackSection time="02:17.136" damage="57000" damageType="physical" />

  <SeparatorSection id="neo-bombarian-special" title={neoBombarianSpecial} />
  <NeoBombarianSpecial />
</DutyStratLayout>
